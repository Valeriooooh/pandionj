         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="pt.iscte.pandionj.PandionJView"
            icon="images/pandionj.gif"
            id="pt.iscte.pandionj.view"
            name="PandionJ"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.jdt.debug.breakpointListeners">
